@page "/Login"
@using eBook.Data;
@using eBook.Models;
@using Microsoft.EntityFrameworkCore;
@inject StoreDBContext dbcontext
@inject NavigationManager Navigation


<article class="login-container" style="padding-top: 56px;">

<h3>Login</h3>

    <div class="container-md" style="margin-bottom: 50px;">
        <div style="text-align: center; margin-top: 50px;" class="mx-auto mt-5">
            <h3>Sign In</h3>
            <form>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" @bind="email">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" @bind="password">
                </div>
                <button type="button" class="btn btn-primary" @onclick="Register" style="margin-top: 20px;">Register</button>
                <button type="button" class="btn btn-success" @onclick="SignIn" style="margin-top: 20px;">Sign In</button>
            </form>
        </div>
    </div>




</article>